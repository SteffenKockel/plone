<?xml version="1.0"?>
<object name="portal_controlpanel" meta_type="Plone Control Panel Tool"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="webmail.groovecubes">

 <configlet
    title="Webmail Config"
    action_id="WebmailConfig"
    appId="groovecubes.webmail"
